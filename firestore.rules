rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Rules for User profiles
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Rules for Daily Logs
    match /dailyLogs/{logId} {
      // Allow creation if the userId in the doc matches the authenticated user
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // Allow read, update, delete if the authenticated user is the owner
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Rules for AI Insights
    match /users/{userId}/weeklyAIInsights/{insightId} {
      allow read, write: if isOwner(userId);
    }
    
    // Rules for Admin settings (Read-only for users, Write for Admin only)
    match /Admin/{document=**} {
      allow read: if isSignedIn();
      allow write: if false; // Only allowed via Firebase Console or Admin SDK
    }
  }
}
